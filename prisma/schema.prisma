// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gadget {
  id    Int         @id @default(autoincrement())
  name  String      @unique
  type  String
  users Character[]
}

model Character {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String?
  species   String
  age       Int
  gadgets   Gadget[]
}
